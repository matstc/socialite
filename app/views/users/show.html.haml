- if @user == current_user and !@user.reply_notifications.empty?
  .notifications-box
    .title 
      != icon 'alert'
      Notifications

    %ul{:class => 'cleared'}
      - @user.reply_notifications.each do |notification|
        %li
          - if notification.is_for_a_top_level_comment
            %span!= "User #{notification.comment.user} #{link_to("replied", link_to_comment(notification.comment))} to your submission #{link_to truncate(notification.comment.submission.title, :length => 40), submission_path(notification.comment.submission)}"
          - else
            %span!= "User #{notification.comment.user} #{link_to("replied", link_to_comment(notification.comment))} to one of your comments"
          %span{:class => 'actions'}
            [
            = link_to "dismiss", reply_notification_path(notification), :method => :delete
            ]
    - if @user.reply_notifications.size > 1
      .dismiss-all-link
        = link_to "Dismiss all notifications", dismiss_all_notifications_path, :method => :delete

= render :partial => 'users/profile_header', :locals => {:user => @user}
= render :partial => "users/filters", :locals => {:user => @user}

- if current_user == @user
  - if @user.profile_text.blank?
    %p You did not provide a profile blurb.

  %p{:class => 'profile-text'}= @user.profile_text
  %p= link_to "Edit blurb", edit_user_path(@user)

- else
  %p{:class => 'profile-text'}= @user.profile_text.blank? ? "This user did not provide a profile blurb." : @user.profile_text
