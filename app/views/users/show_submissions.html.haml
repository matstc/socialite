- set_page_title "#{@user}'s submissions"

= render :partial => 'users/profile_header', :locals => {:user => @user}
= render :partial => "users/filters", :locals => {:user => @user}
%p= "#{@user} posted #{pluralize @user.submissions.size, "submission"}"
= render :partial => "submissions/list", :locals => {:submissions => Submission.ordered_by_created_date.page(params[:page]).where(:user_id => @user)}
