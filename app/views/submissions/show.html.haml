- set_page_title truncate(@submission.title, :length => 100)

= render :partial => 'submissions/single_submission', :locals => {:submission => @submission, :index => nil, :whole_text => true, :show_comment_form => true}

%table{:id => "comments-list"}
  %tbody
    - @submission.top_level_comments.each do |comment|
      = render :partial => 'comments/comment', :locals => {:comment => comment}

